<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!--=============== FLATICON ===============-->
    <link
      rel="stylesheet"
      href="https://cdn-uicons.flaticon.com/2.0.0/uicons-regular-straight/css/uicons-regular-straight.css"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <!--=============== SWIPER CSS ===============-->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
    />

    <!--=============== CSS ===============-->
    <link rel="stylesheet" href="./css/styles.css" />

    <title>Ecommerce Website</title>
  </head>
  <body>
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ HEADER ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <%- include('../layouts/header.ejs') %>

    <!--=============== MAIN ===============-->
    <main class="main">
      <!--=============== BREADCRUMB ===============-->
      <section class="breadcrumb">
        <ul class="breadcrumb__list flex container">
          <li><a href="index.html" class="breadcrumb__link">Home</a></li>
          <li><span class="breadcrumb__link">></span></li>
          <li>
            <span class="breadcrumb__link login-reg-breadcrumb"
              >Login / Register</span
            >
          </li>
        </ul>
      </section>

      <!--=============== LOGIN-REGISTER ===============-->
      <section class="login-register section--lg">
        <div class="">
          <div class="login-reg-intro">
            <form action="/auth/google" method="GET">
              <button type="submit">
                <img
                  class="google"
                  src="./img/icons/google.png"
                  alt="Login with Google"
                />
              </button>
            </form>
            <div>
              <p class="create-accountTxt">Create account</p>
              <p class="login-accountTxt">Login account</p>
            </div>
          </div>
          <div class="login">
            <h3 class="section__title">Login</h3>
            <form action="/login" method="post" class="form grid">
              <input
                type="email"
                placeholder="Your Username or Email "
                class="form__input username-email"
                name="emailusername"
              />
              <p class="err erremailphoneLog">err msg</p>
              <div class="form__input-container">
                <input
                  type="password"
                  placeholder="Your Password"
                  class="form__input passwordLog"
                  id="passwordInput3"
                  name="password"
                />
                <i class="fas fa-eye eye-icon" onclick="toggleEye('passwordInput3', this)" id="togglePassword"></i>
              </div>
              <p class="err errpassLog">err msg</p>
              <a href="/forgot" class="forgotTxt">Forgot Password</a>
              <input type="text" placeholder="OTP" class="form__input otpLog" />
              <p class="err errotpLog">Enter OTP</p>
              <p class="reotpalertLog">
                Resend otp in : <span class="timerLog">0:52</span>
              </p>
              <p class="reotpbuttonLog">Resend</p>
              <div class="form__btn">
                <div class="btn btnotpLog">
                  <p class="getotptextLog">Get OTP</p>
                  <div id="getotploaderLog" class="loader-bar"></div>
                </div>
              </div>
              <div class="form__btn">
                <div class="btn btnverifyLog">
                  <p class="getverifytextLog">Verify OTP</p>
                  <div id="getverifyloaderLog" class="loader-bar"></div>
                </div>
              </div>
            </form>
          </div>
          <div class="register">
            <h3 class="section__title">Create an Account</h3>
            <form
              action="/register"
              method="post"
              class="form grid register-form"
            >
              <input
                type="text"
                placeholder="Username"
                class="form__input username"
                name="username"
              />
              <p class="err errusernameReg">Enter your username</p>
              <input
                type="email"
                placeholder="Your Email"
                class="form__input email"
                name="email"
              />
              <p class="err erremailReg">Enter your email</p>
              <input
                type="text"
                placeholder="Your Phone"
                class="form__input phone"
                name="phone"
              />
              <p class="err errphoneReg">Enter your phone number</p>
              <div class="form__input-container">
                <input
                  type="password"
                  placeholder="Your Password"
                  class="form__input pass"
                  name="password"
                  id="passwordInput1"
                />
                <i class="fas fa-eye eye-icon" onclick="toggleEye('passwordInput1', this)" id="togglePassword"></i>
              </div>

              <p class="err errpassReg">Enter your password</p>
              <div class="form__input-container">
                <input
                  type="password"
                  placeholder="Confirm Password"
                  class="form__input cpass"
                  id="passwordInput2"
                  name="cpassword"
                />
                <i class="fas fa-eye eye-icon" onclick="toggleEye('passwordInput2', this)" id="togglePassword"></i>
              </div>
              <p class="err errcpassReg">Enter your confirm password</p>
              <input type="text" placeholder="OTP" class="form__input otpReg" />
              <p class="err errotpReg">Enter your OTP</p>
              <p class="reotpalertReg otpAlert">
                Resend otp in : <span class="timer">0:52</span>
              </p>
              <p class="reotpbuttonReg otpButton">Resend</p>
              <div class="form__btn">
                <div class="btn btnotpReg">
                  <p class="getotptextReg">Get OTP</p>
                  <div id="getotploaderReg" class="loader-bar"></div>
                </div>
              </div>
              <div class="form__btn">
                <div class="btn btnverifyReg">
                  <p class="getverifytextReg">Verify OTP</p>
                  <div id="getverifyloaderReg" class="loader-bar"></div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </section>

      <!--=============== NEWSLETTER ===============-->
      <section class="newsletter section">
        <div class="newsletter__container container grid">
          <h3 class="newsletter__title flex">
            <img src=".//img/icon-email.svg" alt="" class="newsletter__icon" />
            Sign in to Newsletter
          </h3>
          <p class="newsletter__description">
            ...and receive $25 coupon for first shopping.
          </p>
          <form action="" class="newsletter__form">
            <input
              type="text"
              placeholder="Enter Your Email"
              class="newsletter__input"
            />
            <button type="submit" class="newsletter__btn">Subscribe</button>
          </form>
        </div>
      </section>
    </main>

    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ FOOTER ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <%- include('../layouts/footer.ejs') %>

    <!--=============== SWIPER JS ===============-->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

    <!--=============== MAIN JS ===============-->
    <script src="/js/user/main.js"></script>
    <script src="/js/user/script.js"></script>
  </body>
</html>
