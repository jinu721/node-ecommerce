                  <div class="form-group">
                    <label for="productUpdateDesc">Description</label>
                    <input
                      type="text"
                      class="form-control product-update-desc"
                      id="productUpdateDescription"
                      name="description"
                      placeholder="Product Description"
                      required
                    />
                    <p class="error-message" id="descUpdateError"></p>
                  </div>

                  <div class="form-group">
                    <label for="productUpdateCategory">Category</label>
                    <select
                      class="form-control"
                      id="productUpdateCategory"
                      name="cta"
                    >
                      <option value="">Select Category</option>
                      <% category.forEach((data)=>{ %>
                      <option value="<%= data.name  %>">
                        <%= data.name %>
                      </option>
                      <% }) %>
                    </select>
                    <p class="error-message" id="categoryUpdateError"></p>
                  </div>

                  <div class="form-group">
                    <label for="productUpdateTags">Tags</label>
                    <input
                      type="text"
                      class="form-control product-update-tags"
                      id="productUpdateTags"
                      placeholder="Product tags"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label for="productUpdateBrand">Brand</label>
                    <input
                      type="text"
                      class="form-control product-update-brand"
                      id="productUpdateBrand"
                      placeholder="Product brand"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label>Size Options</label>
                    <div style="padding: 10px">
                      <div class="form-check">
                        <input
                          type="checkbox"
                          class="form-check-input"
                          id="sizeSmallUpdate"
                          value="S"
                          onchange="updateSelectedSizesUpdate()"
                        />
                        <label class="form-check-label" for="sizeSmallUpdate"
                          >S</label
                        >
                      </div>
                      <div class="form-check">
                        <input
                          type="checkbox"
                          class="form-check-input"
                          id="sizeMediumUpdate"
                          value="M"
                          onchange="updateSelectedSizesUpdate()"
                        />
                        <label class="form-check-label" for="sizeMediumUpdate"
                          >M</label
                        >
                      </div>
                      <div class="form-check">
                        <input
                          type="checkbox"
                          class="form-check-input"
                          id="sizeLargeUpdate"
                          value="L"
                          onchange="updateSelectedSizesUpdate()"
                        />
                        <label class="form-check-label" for="sizeLargeUpdate"
                          >L</label
                        >
                      </div>
                      <div class="form-check">
                        <input
                          type="checkbox"
                          class="form-check-input"
                          id="sizeXLUpdate"
                          value="XL"
                          onchange="updateSelectedSizesUpdate()"
                        />
                        <label class="form-check-label" for="sizeXLUpdate"
                          >XL</label
                        >
                      </div>
                      <div class="form-check">
                        <input
                          type="checkbox"
                          class="form-check-input"
                          id="sizeXXLUpdate"
                          value="XXL"
                          onchange="updateSelectedSizesUpdate()"
                        />
                        <label class="form-check-label" for="sizeXXLUpdate"
                          >XXL</label
                        >
                      </div>
                      <div class="form-check">
                        <input
                          type="checkbox"
                          class="form-check-input"
                          id="sizeXXXLUpdate"
                          value="XXXL"
                          onchange="updateSelectedSizesUpdate()"
                        />
                        <label class="form-check-label" for="sizeXXXLUpdate"
                          >XXXL</label
                        >
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <label>Color Options</label>
                    <div class="form-check">
                      <input
                        type="color"
                        value="#008000"
                        id="colorPickerUpdate"
                      />
                      <button
                        class="btn btn-success mb-3"
                        type="button"
                        onclick="addColorUpdate()"
                      >
                        Add Color
                      </button>
                    </div>
                    <div class="showColors" id="showColorsUpdate"></div>
                  </div>
                  <div class="form-group">
                    <label for="productUpdateOgPrice">Price</label>
                    <input
                      type="number"
                      class="form-control product-update-og-price"
                      id="productUpdateOgPrice"
                      placeholder="Original Price"
                      required
                    />
                    <p class="error-message" id="ogPriceUpdateError"></p>
                  </div>
                  <div class="form-group">
                    <div class="form-check">
                      <input
                        type="checkbox"
                        class="form-check-input"
                        id="cashOnDeliveryUpdate"
                      />
                      <label class="form-check-label" for="cashOnDeliveryUpdate"
                        >Cash on Delivery</label
                      >
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="form-check mb-3">
                      <input
                        type="checkbox"
                        class="form-check-input"
                        id="toggleOfferPriceUpdate"
                        onclick="toggleOfferPriceInputUpdate()"
                      />
                      <label
                        class="form-check-label"
                        for="toggleOfferPriceUpdate"
                        >Add Offer Price</label
                      >
                    </div>
                    <div
                      class="offer-price-input mt-2"
                      id="offerPriceUpdateDiv"
                      style="display: none"
                    >
                      <label for="productUpdateOfferPrice">Offer Price</label>
                      <input
                        type="number"
                        class="form-control product-update-offer-price"
                        id="productUpdateOfferPrice"
                        placeholder="Offer Price"
                      />
                      <p class="error-message" id="offerPriceUpdateError"></p>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="productUpdateStock">Stock</label>
                    <input
                      type="number"
                      class="form-control product-update-stock"
                      id="productUpdateStock"
                      placeholder="Stock"
                      required
                    />
                    <p class="error-message" id="stockUpdateError"></p>
                  </div>
                  <div class="form-group">
                    <div class="form-check mb-3">
                      <input
                        type="checkbox"
                        class="form-check-input"
                        id="toggleWarrantyUpdate"
                        onclick="toggleWarrantyInputUpdate()"
                      />
                      <label class="form-check-label" for="toggleWarrantyUpdate"
                        >Add Warranty</label
                      >
                    </div>
                    <div
                      class="warranty-input mt-2"
                      id="warrantyUpdateDiv"
                      style="display: none"
                    >
                      <label for="productUpdateWarranty">Warranty</label>
                      <input
                        type="text"
                        class="form-control product-update-warranty"
                        id="productUpdateWarranty"
                        placeholder="Warranty"
                      />
                      <p class="error-message" id="warrantyUpdateError"></p>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="productUpdateReturnPolicy">Return Policy</label>
                    <input
                      type="text"
                      class="form-control product-update-return-policy"
                      id="productUpdateReturnPolicy"
                      placeholder="Return Policy"
                      required
                    />
                    <p class="error-message" id="returnPolicyUpdateError"></p>
                  </div>
                  <div class="modal-footer">
                    <button
                      type="button"
                      class="btn btn-secondary"
                      data-bs-dismiss="modal"
                    >
                      Close
                    </button>
                    <button
                      type="submit"
                      class="btn btn-primary"
                      id="updateProductBtn"
                    >
                      Update Product
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <ul class="pagination">
      <% let startPage = Math.max(1, currentPage - Math.floor(pagesToShow / 2));
      %> <% let endPage = Math.min(totalPages, startPage + pagesToShow - 1); %>
      <% if (endPage - startPage + 1 < pagesToShow) { %> <% startPage =
      Math.max(1, endPage - pagesToShow + 1); %> <% } %> <% if (currentPage >
      pagesToShow) { %>
      <li><a href="?page=1" class="pagination__link">01</a></li>
      <% } %> <% for (let i = startPage; i <= endPage; i++) { %>
      <li>
        <a
          href="?page=<%= i %>"
          class="pagination__link <%= currentPage === i ? 'active' : '' %>"
        >
          <%= i < 10 ? '0' + i : i %>
        </a>
      </li>
      <% } %> <% if (endPage < totalPages) { %>
      <li>
        <a
          href="?page=<%= currentPage + pagesToShow %>"
          class="pagination__link"
        >
          <i class="fa-solid fa-arrow-right" style="color: #3224f9"></i>
        </a>
      </li>
      <% } %> <% if (endPage < totalPages) { %>
      <li>
        <a href="?page=<%= totalPages %>" class="pagination__link"
          ><%= totalPages < 10 ? '0' + totalPages : totalPages %></a
        >
      </li>
      <% } %>
    </ul>

