<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>Admin Panel - Update Coupon</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/css/admin.css" />
    <!-- End layout styles -->
    <link rel="shortcut icon" href="assets/images/favicon.png" />
  </head>
  <body>
    <div class="container-scroller">
      <%- include('../layouts/headerAdmin.ejs') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_navbar.html -->
        
        <!-- partial -->
        <div style="margin-top: 20px" class="col-md-4 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Update Coupon</h4>
              <p class="card-description">Edit the Coupon Details</p>
              <form class="forms-sample" id="updateCouponForm">
                <div class="form-group d-flex align-items-center">
                  <div class="input-group">
                    <input
                      type="text"
                      class="form-control"
                      id="couponCode"
                      value="<%= coupon.code %>"
                      placeholder="Coupon Code"
                    />
                    <div class="input-group-append">
                      <button
                        type="button"
                        class="btn btn-secondary"
                        id="generateCouponBtn"
                        title="Generate Coupon"
                      >
                        <i class="fas fa-sync-alt"></i>
                      </button>
                    </div>
                  </div>
                </div>
                <p class="error-message" id="couponCodeError"></p>

                <div class="form-group">
                  <label for="discountValue">Discount Value</label>
                  <input
                    type="text"
                    class="form-control"
                    id="discountValue"
                    value="<%= coupon.discountValue %>"
                    placeholder="Discount Value"
                  />
                  <p class="error-message" id="discountValueError"></p>
                </div>
                <div class="form-group">
                  <label for="validFrom">Valid From</label>
                  <input type="date" class="form-control"  id="validFrom" />
                  <p class="error-message" id="validFromError"></p>
                </div>
                <div class="form-group">
                  <label for="validUntil">Valid Until</label>
                  <input type="date" class="form-control" id="validUntil" />
                  <p class="error-message" id="validUntilError"></p>
                </div>
                <div class="form-group">
                  <label for="minPurchase">Minimum Purchase</label>
                  <input
                    type="text"
                    class="form-control"
                    id="minPurchase"
                    value="<%= coupon.minPurchase %>"
                    placeholder="Minimum Purchase Amount"
                  />
                  <p class="error-message" id="minPurchaseError"></p>
                </div>
                <div class="form-group">
                  <label for="maxDiscount">Maximum Discount</label>
                  <input
                    type="text"
                    class="form-control"
                    id="maxDiscount"
                    value="<%= coupon.maxDiscount %>"
                    placeholder="Maximum Discount Amount"
                  />
                  <p class="error-message" id="maxDiscountError"></p>
                </div>
                <div class="form-group">
                  <label for="usageLimit">Usage Limit</label>
                  <input
                    type="number"
                    class="form-control"
                    id="usageLimit"
                    value="<%= coupon.usageLimit %>"
                    placeholder="Usage Limit"
                  />
                  <p class="error-message" id="usageLimitError"></p>
                </div>
                <button
                  type="button"
                  class="btn btn-primary mr-2"
                  id="submitButton"
                  data-id="<%= coupon._id %>"
                >
                  Update Coupon
                </button>
              </form>
            </div>
          </div>
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>

    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="/js/admin/couponUpdate.js"></script>
    <!-- End custom js for this page -->
  </body>
</html>
